<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>
    
    <ItemGroup>
        <!-- Deliberately not making internals visible to the integration tests -->
        <InternalsVisibleTo Include="OrderBookService.Tests" />
    </ItemGroup>
  
    <ItemGroup>
        <Protobuf Include="Protos\customtypes\assetclass.proto" GrpcServices="Server" />
        <Protobuf Include="Protos\customtypes\decimal.proto" GrpcServices="Server" />
        <Protobuf Include="Protos\customtypes\guid.proto" GrpcServices="Server" />
        <Protobuf Include="Protos\customtypes\responsestatus.proto" GrpcServices="Server" />        
        <Protobuf Include="Protos\greet.proto" GrpcServices="Server" />
        <Protobuf Include="Protos\orderbook.proto" GrpcServices="Server" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Grpc.AspNetCore" Version="2.49.0" />
        <PackageReference Include="Grpc.AspNetCore.Server.Reflection" Version="2.49.0" />
    </ItemGroup>

</Project>
